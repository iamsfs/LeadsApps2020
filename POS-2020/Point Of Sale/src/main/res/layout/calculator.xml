<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calculator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BDC2C3"
    android:stretchColumns="*"
    android:shrinkColumns="*">
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/key_clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:background="@drawable/key_clear"
            android:contentDescription="@string/lbl_key"
            style="@style/kbd_keys"/>
        <Button android:id="@+id/key_devide"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_devide"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_multiply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_multiply"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_x"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_x"
            style="@style/kbd_keys" />
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/key_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_01"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_02"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_03"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_03"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_minus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_minus"
            style="@style/kbd_keys" />
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/key_04"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_04"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_05"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_05"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_06"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_06"
            style="@style/kbd_keys" />
        <Button android:id="@+id/key_plus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_plus"
            style="@style/kbd_keys" />
    </TableRow>
    <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:stretchColumns="*" android:shrinkColumns="*" android:layout_span="3">
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/key_07"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kbd_keys_height"
                    android:contentDescription="@string/lbl_key"
                    android:background="@drawable/key_07"
                    style="@style/kbd_keys" />
                <Button android:id="@+id/key_08"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kbd_keys_height"
                    android:contentDescription="@string/lbl_key"
                    android:background="@drawable/key_08"
                    style="@style/kbd_keys" />
                <Button android:id="@+id/key_09"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kbd_keys_height"
                    android:contentDescription="@string/lbl_key"
                    android:background="@drawable/key_09"
                    style="@style/kbd_keys" />
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/key_done"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kbd_keys_height"
                    android:contentDescription="@string/lbl_key"
                    android:background="@drawable/key_done"
                    style="@style/kbd_keys" />
                <Button android:id="@+id/key_0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kbd_keys_height"
                    android:contentDescription="@string/lbl_key"
                    android:background="@drawable/key_0"
                    style="@style/kbd_keys" />
                <Button android:id="@+id/key_dot"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kbd_keys_height"
                    android:contentDescription="@string/lbl_key"
                    android:background="@drawable/key_dot"
                    style="@style/kbd_keys" />
            </TableRow>
        </TableLayout>
        <Button android:id="@+id/key_equal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kbd_keys_height_eq"
            android:contentDescription="@string/lbl_key"
            android:background="@drawable/key_equal"
            style="@style/kbd_keys" />
    </TableRow>
</TableLayout>
