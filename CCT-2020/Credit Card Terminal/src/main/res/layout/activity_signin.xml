<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/appBar"
        android:padding="@dimen/activity_horizontal_margin"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/action_cancel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:drawableLeft="@drawable/ic_arrow_back_white_24dp"
                android:drawableRight="@drawable/spacer" />

            <TextView
                android:id="@+id/action_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/lbl_account_login"
                android:textColor="#ffffffff"
                android:textSize="24.0sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/spacer"
                android:drawableRight="@drawable/spacer" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">

            <EditText
                android:id="@+id/ln_username"
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/lbl_username"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="#ff4d4d4d"
                android:textSize="24.0sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/ln_password"
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/lbl_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#ff4d4d4d"
                android:textSize="24.0sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/action_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="@string/lbl_next"
                android:textColor="#ffffffff"
                android:textSize="36.0sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/lbl_login_msg_1"
                android:textColor="#898989"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/action_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autoLink="phone"
                android:gravity="center"
                android:text="@string/lbl_login_msg_2"
                android:textColor="#898989"
                android:textColorLink="#0000ff"
                android:textSize="22sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>