<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:background="@android:color/transparent"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="@dimen/activity_horizontal_margin">
	<TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/lbl_success_msg_header"
        android:textSize="22sp"/>
	<TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/content_horizontal_margin"
        android:gravity="left|center"
        android:text="@string/lbl_success_msg_content"
        android:textSize="18sp"/>
	<View android:layout_width="match_parent"
        android:layout_height="100dp"/>
</LinearLayout>