<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VerificationActivity"
	android:baselineAligned="false">

<!--	<TextView android:layout_width="match_parent"-->
<!--		android:layout_height="60dp"-->
<!--		android:text="@string/lbl_verification"-->
<!--		android:textColor="#ffffff"-->
<!--		android:layout_gravity="center"-->
<!--		android:gravity="center"-->
<!--        android:layout_marginBottom="@dimen/activity_vertical_margin"-->
<!--		android:background="@drawable/btn_bg"-->
<!--		android:textSize="30sp"/>-->

	<TableLayout android:layout_gravity="top" android:background="@color/app_bar" android:padding="@dimen/activity_horizontal_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:stretchColumns="*" android:shrinkColumns="*">
		<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:layout_gravity="left" android:id="@+id/action_cancel" android:layout_width="fill_parent" android:layout_height="fill_parent" android:drawableLeft="@drawable/lbl_back" android:drawableRight="@drawable/spacer" />
			<TextView android:textSize="24.0sp" android:textColor="#000000" android:gravity="center" android:layout_gravity="center" android:id="@+id/action_title" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/lbl_verification" />
			<TextView android:layout_gravity="right"  android:paddingRight="19.0dip" android:layout_width="fill_parent" android:visibility="invisible" android:layout_height="fill_parent" android:drawableLeft="@drawable/lbl_go" />
		</TableRow>
	</TableLayout>


	<LinearLayout android:layout_width="match_parent" android:layout_height="0dip" android:layout_weight="1"
        android:orientation="vertical" android:gravity="top|center"
        android:layout_marginTop="@dimen/activity_horizontal_margin_s"
		android:layout_marginBottom="@dimen/activity_horizontal_margin_s"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">
	    <TextView android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:text="@string/lbl_verification_msg"
	        android:paddingBottom="@dimen/activity_horizontal_margin"
	        android:textSize="20sp"/>

		<EditText android:id="@+id/text_verification"
			android:layout_marginTop="@dimen/_24sdp"
			android:layout_width="@dimen/_120sdp"
			android:layout_height="@dimen/_45sdp"
			android:gravity="center"
			android:background="@drawable/edit_text_bg"
			android:inputType="numberSigned"
			android:maxLength="4"
			android:singleLine="true"
			android:textColor="#898989"
			android:textSize="24sp" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/activity_vertical_margin"
		android:layout_marginRight="@dimen/activity_vertical_margin"
		android:gravity="top|center"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="@string/lbl_verification_footer_1"
			android:textColorLink="#898989"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/action_back"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:autoLink="phone"
			android:gravity="center"
			android:text="@string/lbl_verification_footer_2"
			android:textColor="#0000ff"
			android:textColorLink="#0000ff"
			android:textSize="20sp" />
	</LinearLayout>

	<TextView android:id="@+id/action_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_verify"
        android:textColor="#000000"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/lbl_bg"
        android:textSize="30sp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="top|center"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:gravity="left"
            android:textColorLink="#898989"
			android:text="@string/lbl_verification_footer_3"
            android:textSize="20sp"/>
        <TextView
			android:id="@+id/action_call"
			android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:autoLink="phone"
            android:textColorLink="#0000ff"
            android:drawableLeft="@drawable/icon_phone_s"
            android:text="@string/lbl_verification_footer_4"
            android:textColor="#0000ff"
            android:textSize="20sp"/>
	</LinearLayout>
</LinearLayout>